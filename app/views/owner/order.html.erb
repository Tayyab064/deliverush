<link rel="stylesheet" type="text/css" href="../website/css/style.css">
<section class="parallax-window" id="short" data-parallax="scroll" data-image-src="img/sub_header_cart.jpg" data-natural-width="1400" data-natural-height="350">
    <div id="subheader">
        <div id="sub_content">
         <h1>Order No:  O<%= @order.id %></h1>
            <div class="bs-wizard">
            <% if @order.status == 'cancel' %>
                <div class="col-xs-6 bs-wizard-step complete">
                  <div class="text-center bs-wizard-stepnum"><strong>1.</strong> Requested</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                </div>
            
                <div class="col-xs-6 bs-wizard-step complete">
                  <div class="text-center bs-wizard-stepnum"><strong>2.</strong> Cancel</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                </div> 
            <% else %>
                <div class="col-xs-3 bs-wizard-step <%= (@order.status=='pending' || @order.status=='approved' || @order.status=='dispatched' || @order.status=='finish' || @order.status=='completed') ? 'complete' : 'disabled' %>">
                  <div class="text-center bs-wizard-stepnum"><strong>1.</strong> Pending</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                </div>
            
                <div class="col-xs-3 bs-wizard-step <%= (@order.status=='approved' || @order.status=='dispatched' || @order.status=='finish' || @order.status=='completed') ? 'complete' : 'disabled' %>">
                  <div class="text-center bs-wizard-stepnum"><strong>2.</strong> Approved</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                </div> 

                <div class="col-xs-3 bs-wizard-step <%= (@order.status=='dispatched' || @order.status=='finish' || @order.status=='completed') ? 'complete' : 'disabled' %>">
                  <div class="text-center bs-wizard-stepnum"><strong>3.</strong> Dispatched</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                </div>
            
                <div class="col-xs-3 bs-wizard-step <%= (@order.status=='finish' || @order.status=='completed') ? 'complete' : 'disabled' %>">
                  <div class="text-center bs-wizard-stepnum"><strong>4.</strong> Completed</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                </div>
            <% end %>
        </div><!-- End bs-wizard --> 
        </div><!-- End sub_content -->
    </div><!-- End subheader -->
</section><!-- End section -->
<div class="box_style_2" id="main_menu">    	
    <h3 class="nomargin_top"><%= @order.address %></h3>
    <h3 ><%= @order.notes %></h3>
    <p>
        Te ferri iisque aliquando pro, posse nonumes efficiantur in cum. Sensibus reprimique eu pro. Fuisset mentitum deleniti sit ea.
    </p>
    <table class="table table-striped cart-list">
        <thead>
            <tr>
                <th>
                     #
                </th>
                <th>
                     
                </th>
                <th>
                     Item
                </th>
                <th>
                     Price
                </th>
            </tr>
        </thead>
        <tbody>
            <% pr = 0 %>
            <% @order.items.each_with_index do |foodi,ind| %>
            <% food = foodi.orderable %>
            <% pr = pr + food.price %>
            <tr>
                <td class="v-align-middle"><%= ind +1 %>.</td>
                <td>
                    <figure class="thumb_menu_list"><img src="<%= food.image.present? ? food.image_url : '../website/img/menu-thumb-1.jpg' %>" alt="thumb" style='width: 60px; height: auto;'></figure>
                </td>
                <td class="v-align-middle">
                    <h5><%= food.name %></h5>
                    <p>
                        <%= food.description %>
                    </p>
                    
                </td>
                <td class="options v-align-middle">
                    <strong>€ <%= food.price %></strong>
                </td>
            </tr>
            <% end %>
            <tr>
                <td></td>
                <td class="v-align-middle">
                    <h5>Delivery Fee</h5>
                </td>
                <td></td>
                <td class="options v-align-middle">
                    <strong>€ <%= @order.restaurant.delivery_fee.round(2) %></strong>
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="v-align-middle">
                    <h2>Total</h2>
                </td>
                <td></td>
                <td class="options v-align-middle">
                    <strong>€ <%= @order.restaurant.delivery_fee.round(2) + pr.round(2) %></strong>
                </td>
            </tr>
        </tbody>
    </table>
    <div style="text-align: center;">
        <% if @order.status == 'pending' %>
            <%= link_to "Accept", owner_order_accept_path, :class => "btn btn-success", style: 'width: 30%;' %>
        <% elsif @order.status == 'approved' %>
            <%= link_to "Dispatch", owner_order_dispatch_path, :class => "btn btn-success", style: 'width: 30%;' %>
        <% end %>
    </div>
</div><!-- End box_style_1 -->