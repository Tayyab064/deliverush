<div class="page-content-wrapper">
  <!-- START PAGE CONTENT -->
   <div class="container-fluid container-fixed-lg bg-white">
      <!-- START PANEL -->
      <div class="portlet light portlet-fit portlet-datatable ">
        <div class="portlet-title">
          <div class="pull-right">
          	<div class="col-xs-6">
          	<button class="btn btn-success" data-target="#give_wallet_modal" data-toggle="modal" style="float: left;">Add Category</button>
          	</div>
            <div class="col-xs-6">
              <input type="text" id="search-table" class="form-control pull-right" placeholder="Search">
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="portlet-body">
          <table class="table table-striped demo-table-search" id="tableWithSearch">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <!-- <th>Edit</th> -->
              </tr>
            </thead>
            <tbody>
              <% @cat.each do |cati| %>
              <tr>
                <td class="v-align-middle semi-bold">
                  <img src="<%= cati.image_url %>" alt="" border=3 height=100 width=150></img>
                </td>
                <td class="v-align-middle semi-bold">
                  <p><%= cati.name  %></p>
                </td>
                <!-- <td class="v-align-middle bold">
                  <p></p>
                </td> -->
              </tr>

              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <!-- END PANEL -->
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="give_wallet_modal" tabindex="-1" role="dialog" aria-hidden="true">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
    <i class="pg-close"></i>
  </button>
  <div class="modal-dialog ">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="text-left p-b-5" style="text-align: center !important;"><span class="bold">Give</span> Credit</h5>
      </div>
      <div class="modal-body">
        <%= form_tag( dashboard_deliverable_cat_save_path , multipart: true ,  id: "form-personal" , method: "post") do %>
            <div class="row clearfix">      
              <div class="col-sm-12">
                <div class="form-group form-group-default required">
                  <label>Category</label>
                  <%= text_field_tag :category , "", class: 'form-control' , placeholder: ''%>
                </div>
              </div>
              <div class="col-sm-12">
                <div class="form-group form-group-default required">
                  <label>Image</label>
                  <%= file_field_tag :image , class: 'form-control' %>
                </div>
              </div>
            </div>
            <div style="text-align: center;"><%= submit_tag 'Save' , class: "btn btn-primary" %></div>
          <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>