<div class="page-content-wrapper">
  <!-- START PAGE CONTENT -->
   <div class="container-fluid container-fixed-lg bg-white">
      <!-- START PANEL -->
      <div class="portlet light portlet-fit portlet-datatable ">
        <div class="portlet-title" style="margin-top: 10px;margin-bottom: 10px;">
          <div class="pull-right">
          	<div class="col-xs-6">
          	<button class="btn btn-success" data-target="#give_wallet_modal" data-toggle="modal" style="float: left;">Add Category</button>
          	</div>
            <div class="col-xs-6">
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="portlet-body">
          <% if @cat.count == 0 %>
            <h3 style="text-align: center;">No record found</h3>
          <% end %>
          <% inds = 1 %>
          <% @cat.each do |cati| %>
            <div class="col-md-6">
              <a class="box_work">
                <img src="<%= cati.image_url %>" width="100%" height="240" alt="" class="">
                <h3 style="text-align: center;"><%= cati.name.capitalize  %></h3>
                <p style="text-align: center;"><%= cati.description  %></p>
                <div style="text-align: center;">
                  <%= link_to delete_category_path(cati.id)  do %>
                  <i class="glyphicon glyphicon-trash"></i>
                <% end %>
                </div>
                </a>
            </div>
            <% if (inds%2) == 0 %>
            <hr>
            <% end %>
            <% inds += 1 %>
          <% end %>
        </div>
      </div>
      <!-- END PANEL -->
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="give_wallet_modal" tabindex="-1" role="dialog" aria-hidden="true">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
    <i class="pg-close"></i>
  </button>
  <div class="modal-dialog ">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="text-left p-b-5" style="text-align: center !important;"><span class="bold">Add</span> Category</h5>
      </div>
      <div class="modal-body">
        <%= form_tag( dashboard_deliverable_cat_save_path , multipart: true ,  id: "form-personal" , method: "post") do %>
            <div class="row clearfix">      
              <div class="col-sm-12">
                <div class="form-group form-group-default required">
                  <label>Category</label>
                  <%= text_field_tag :category , "", class: 'form-control' , placeholder: ''%>
                </div>
              </div>
              <div class="col-sm-12">
                <div class="form-group form-group-default required">
                  <label>Description</label>
                  <%= text_field_tag :description , "", class: 'form-control' , placeholder: ''%>
                </div>
              </div>
              <div class="col-sm-12">
                <div class="form-group form-group-default required">
                  <label>Image</label>
                  <%= file_field_tag :image , class: 'form-control' %>
                </div>
              </div>
            </div>
            <div style="text-align: center;"><%= submit_tag 'Save' , class: "btn btn-primary" %></div>
          <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>