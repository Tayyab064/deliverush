<div class="page-content-wrapper ">
  <!-- START PAGE CONTENT -->

  <div class="content full-width overlay-footer" style="padding-top: 0px !important;">

    <div class="container-fluid container-fixed-lg ">
      <div id="rootwizard">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs nav-tabs-linetriangle nav-tabs-separator nav-stack-sm">
          <li class="active">
            <a data-toggle="tab" href="#tab1"><i class="fa fa-globe  tab-icon"></i> <span>Pending</span></a>
          </li>
          <li class="">
            <a data-toggle="tab" href="#tab2"><i class="fa fa-question tab-icon"></i> <span>Approved</span></a>
          </li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content">
          <div class="tab-pane padding-20 active slide-left" id="tab1">
            <div class="container-fluid container-fixed-lg bg-white">
                <!-- START PANEL -->
				<div class="panel panel-transparent">
					<div class="panel-heading">
					  <div class="panel-title">Pending
					  </div>
					  <div class="pull-right">
					    <div class="col-xs-12">
					      <input type="text" id="search-table" class="form-control pull-right" placeholder="Search">
					    </div>
					  </div>
					  <div class="clearfix"></div>
					</div>
					<div class="panel-body">
					  <table class="table table-striped demo-table-search" id="tableWithSearch">
					    <thead>
					      <tr>
					        <th>ID</th>
					        <th>Name</th>
					        <th>Location</th>
					        <th>Cuisine</th>
					        <th>Owner</th>
					        <th>Approve</th>
					      </tr>
					    </thead>
					    <tbody>
					      <% @restaurant.where(status: 0).each do |restaurant| %>
					      <tr>
					        <td class="v-align-middle semi-bold">
					          <p>R<%= restaurant.id %></p>
					        </td>
					        <td class="v-align-middle semi-bold">
					          <p><%= restaurant.name %></p>
					        </td>
					        <td class="v-align-middle">
					          <p><%= restaurant.location %></p>
					        </td>
					        <td class="v-align-middle">
					          <p><%= restaurant.cuisine %></p>
					        </td>
					        <td class="v-align-middle">
					          <p><%= restaurant.owner.email %></p>
					        </td>
					        <td class="v-align-middle">
					          <button class="btn btn-success btn-cons" onclick="location.href='<%= restaurant_mark_approve_path(restaurant.id) %>'">Approve</button>
					        </td>
					      </tr>

					      <% end %>
					    </tbody>
					  </table>
					</div>
				</div>
				<!-- END PANEL -->
            </div>
          </div>
          <div class="tab-pane slide-left padding-20" id="tab2">
            <div class="container-fluid container-fixed-lg bg-white">
                <!-- START PANEL -->
				<div class="panel panel-transparent">
					<div class="panel-heading">
					  <div class="panel-title">Approved
					  </div>
					  <div class="pull-right">
					    <div class="col-xs-12">
					      <input type="text" id="search-table-one" class="form-control pull-right" placeholder="Search">
					    </div>
					  </div>
					  <div class="clearfix"></div>
					</div>
					<div class="panel-body">
					  <table class="table table-striped demo-table-search" id="tableWithSearchOne">
					    <thead>
					      <tr>
					        <th>ID</th>
					        <th>Name</th>
					        <th>Type</th>
					        <th>Opening Time</th>
					        <th>Closing Time</th>
					        <th>Location</th>
					        <th>Popular</th>
					      </tr>
					    </thead>
					    <tbody>
					      <% @restaurant.where(status: 1).each do |restaurant| %>
					      <tr onclick="location.href='#'" style="cursor: pointer;">
					        <td class="v-align-middle semi-bold">
					          <p>R<%= restaurant.id %></p>
					        </td>
					        <td class="v-align-middle semi-bold">
					          <p><%= restaurant.name %></p>
					        </td>
					        <td class="v-align-middle bold">
					          <p><%= restaurant.typee %></p>
					        </td>
					        <td class="v-align-middle">
					          <p><%= restaurant.opening_time %></p>
					        </td>
					        <td class="v-align-middle">
					          <p><%= restaurant.closing_time %></p>
					        </td>
					        <td class="v-align-middle">
					          <p><%= restaurant.location %></p>
					        </td>
					        <td class="v-align-middle">
					          <button class="btn btn-success btn-cons" onclick="location.href='<%= restaurant_mark_popular_path(restaurant.id) %>'"><%= restaurant.popular ? 'Mark Popular' : 'Unmark Popular' %></button>
					        </td>
					      </tr>

					      <% end %>
					    </tbody>
					  </table>
					</div>
				</div>
				<!-- END PANEL -->
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>